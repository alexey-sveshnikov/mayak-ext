{
  "manifest_version": 3,
  "name": "Плагин для заполнения корзины в Утконосе",
  "description": "",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://utkonos.ru/*",
        "https://www.utkonos.ru/*",
        "https://adm.utkonos.ru/*",
        "https://www.adm.utkonos.ru/*",
        "https://lenta.com/*"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://utkonos.ru/*",
    "https://wwww.utkonos.ru/*",
    "https://adm.utkonos.ru/*",
    "https://wwww.adm.utkonos.ru/*",
    "https://lenta.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/injected_script.js",
        "js/vendor.js",
        "styles.css"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "commands": {
    "reload": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      },
      "description": "Reload extension (development)"
    }
  }
}
